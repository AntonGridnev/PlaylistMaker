<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="HeaderTextStyle">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/activity_text_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="ButtonMainStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textAppearance">@style/HeaderTextStyle</item>
        <item name="android:textColor">@color/black</item>

        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginHorizontal">@dimen/indent_size</item>
        <item name="android:layout_marginTop">@dimen/panel_header_indent</item>
        <item name="android:layout_weight">@dimen/activity_layout_weight</item>
        <item name="android:background">@drawable/rounded_button</item>

        <item name="backgroundTint">@color/white</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_padding</item>
        <item name="iconTint">@color/black</item>

        <item name="elevation">0dp</item>
        <item name="android:elevation">0dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="textSettingsStyle">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/settings_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="stringSettingsStyle">
        <item name="android:textAppearance">@style/textSettingsStyle</item>

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/settings_strings_height</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:paddingStart">@dimen/indent_size</item>
        <item name="android:paddingEnd">@dimen/settings_indent_size</item>
        <item name="drawableTint">?attr/colorOnSecondary</item>
    </style>

</resources>