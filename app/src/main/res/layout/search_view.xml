<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/search_list_height"
    android:layout_marginStart="@dimen/search_list_start"
    android:layout_marginEnd="@dimen/settings_indent_size"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ArtworkUrl100"
        android:layout_width="@dimen/search_list_image"
        android:layout_height="@dimen/search_list_image"
        android:layout_gravity="center"
        tools:src="@drawable/barsik" />

    <LinearLayout
        android:layout_width="@dimen/zero_size"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/icon_padding"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/TrackName"
            style="@style/textSettingsStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/icon_padding"
            android:layout_marginBottom="1dp"
            android:ellipsize="end"
            android:maxLines="1"
            tools:text="Название песниsadasdasdsadasdsadsadasdsadsdaa" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/ArtistName"
                style="@style/textSettingsStyle"
                android:layout_width="@dimen/zero_size"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableEnd="@drawable/ic_point_13"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="?attr/colorOnSecondary"
                android:textSize="@dimen/search_small_text_size"
                tools:text="Название группыasdasdasdasdsadsadsadasdsadasdasdsadsad" />

            <TextView
                android:id="@+id/TrackTime"
                style="@style/textSettingsStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/icon_padding"
                android:textColor="?attr/colorOnSecondary"
                android:textSize="@dimen/search_small_text_size"
                tools:text="12:12" />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|end"
        android:src="@drawable/ic_arrow_forward_24"
        app:tint="?attr/colorOnSecondary" />

</LinearLayout>