<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/indent_size"
    android:paddingBottom="@dimen/lower_indent"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/panel_header_size"
        android:text="@string/title_name"
        android:textColor="@color/white"
        android:textSize="@dimen/activity_text_size"
        android:textStyle="bold" />

    <Button
        android:foreground="?attr/selectableItemBackground"
        android:id="@+id/search_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/panel_header_indent"
        android:layout_weight="@dimen/activity_layout_weight"
        android:background="@drawable/rounded_button"

        android:text="@string/search"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="@dimen/activity_text_size"
        android:textStyle="bold"

        app:backgroundTint="@color/white"
        app:icon="@drawable/ic_search_24"
        app:iconGravity="textStart"
        app:iconPadding="@dimen/icon_padding"
        app:iconTint="@color/black" />

    <Button
        android:foreground="?attr/selectableItemBackground"
        android:id="@+id/media_library_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/indent_size"
        android:layout_weight="@dimen/activity_layout_weight"
        android:background="@drawable/rounded_button"

        android:text="@string/media_library"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="@dimen/activity_text_size"
        android:textStyle="bold"

        app:backgroundTint="@color/white"
        app:icon="@drawable/ic_music_24"
        app:iconGravity="textStart"
        app:iconPadding="@dimen/icon_padding"
        app:iconTint="@color/black" />

    <Button
        android:foreground="?attr/selectableItemBackground"
        android:id="@+id/settings_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/indent_size"
        android:layout_weight="@dimen/activity_layout_weight"
        android:background="@drawable/rounded_button"

        android:text="@string/settings"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="@dimen/activity_text_size"
        android:textStyle="bold"

        app:backgroundTint="@color/white"
        app:icon="@drawable/ic_settings_24"
        app:iconGravity="textStart"
        app:iconPadding="@dimen/icon_padding"
        app:iconTint="@color/black" />

</LinearLayout>