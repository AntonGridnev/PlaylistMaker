<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimary"
    android:orientation="vertical"
    tools:theme="@style/Theme.PlaylistMaker">

    <Toolbar
        android:id="@+id/toolbar_search"
        android:layout_width="match_parent"
        android:layout_height="@dimen/panel_header_size"
        android:navigationIcon="@drawable/ic_arrow_back_24"
        android:title="@string/search"
        android:titleTextAppearance="@style/HeaderTextStyle"
        android:textSize="@dimen/search_header_text_size"
        android:titleTextColor="?attr/colorSecondary" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/search_header_size"
        android:layout_marginHorizontal="@dimen/indent_size"
        android:layout_marginTop="@dimen/search_header_margin"
        android:layout_marginBottom="@dimen/search_header_margin"
        android:background="@drawable/rounded_background_search">

        <ImageView
            android:id="@+id/searchIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_search_16"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="@dimen/search_header_margin"
            app:tint="?attr/colorSecondaryVariant" />

        <EditText
            android:id="@+id/inputEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/clearIcon"
            android:layout_toEndOf="@id/searchIcon"
            android:layout_centerInParent="true"
            android:inputType="text"
            android:hint="@string/search"
            android:textColorHint="?attr/colorSecondaryVariant"
            android:maxLines="1"
            android:maxLength="100"
            android:background="@android:color/transparent" />

        <ImageView
            android:id="@+id/clearIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_clear_16"
            app:tint="?attr/colorSecondaryVariant"
            android:layout_marginEnd="12dp"
            android:visibility="gone"/>

    </RelativeLayout>

</LinearLayout>