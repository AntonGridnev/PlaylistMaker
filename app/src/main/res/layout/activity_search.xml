<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimary"
    android:orientation="vertical"
    tools:theme="@style/Theme.PlaylistMaker">

    <Toolbar
        android:id="@+id/toolbar_search"
        android:layout_width="match_parent"
        android:layout_height="@dimen/panel_header_size"
        android:navigationIcon="@drawable/ic_arrow_back_24"
        android:textSize="@dimen/search_header_text_size"
        android:title="@string/search"
        android:titleTextAppearance="@style/HeaderTextStyle"
        android:titleTextColor="?attr/colorSecondary" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/search_header_size"
        android:layout_marginHorizontal="@dimen/indent_size"
        android:layout_marginTop="@dimen/search_header_margin"
        android:layout_marginBottom="@dimen/search_header_margin"
        android:background="@drawable/rounded_background_search">

        <ImageView
            android:id="@+id/searchIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="@dimen/search_header_margin"
            android:src="@drawable/ic_search_16"
            app:tint="?attr/colorSecondaryVariant" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/searchIcon">

            <EditText
                android:id="@+id/inputEditText"
                style="textSettingsStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:hint="@string/search"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:maxLength="100"
                android:maxLines="1"
                android:paddingEnd="30dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="?attr/colorSecondaryVariant" />

            <ImageView
                android:id="@+id/clearIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|end"
                android:layout_marginEnd="12dp"
                android:src="@drawable/ic_clear_16"
                android:visibility="gone"
                app:tint="?attr/colorSecondaryVariant" />

        </FrameLayout>

    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/indent_size"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

        <TextView
            android:id="@+id/placeholderMessage"
            style="@style/searchErrorsStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="102dp"
            android:layout_marginEnd="24dp"
            android:gravity="center"

            android:visibility="gone" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/reconnect"
            style="@style/searchErrorsStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="350dp"
            android:text="@string/refresh"
            android:textAllCaps="false"
            android:textColor="?attr/colorPrimary"
            android:textSize="14sp"
            android:visibility="gone"
            app:backgroundTint="?attr/colorSecondary"

            app:cornerRadius="54dp" />

    </FrameLayout>

</LinearLayout>